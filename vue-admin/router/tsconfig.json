{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		//解析非相对模块的基础地址，默认是当前目录
		"baseUrl": ".",
		//路径映射，相对于baseUrl
		"paths": {
			"@/*": [
				"./src/*"
			],
			"#/*": [
				"./types/*"
			]
		},
		"types": [
			"element-plus/global",
			"echarts",
			"lodash"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"vite.config.ts",
		"vite/**/*.ts",
		"mock/**/*.ts",
		"types/**/*.d.ts",
		"types/**/*.ts",
	],
	// "references": [
	// 	{
	// 		"path": "./tsconfig.node.json"
	// 	}
	// ]
}
